<controls:ChildWindow x:Class="SLSnake.Views.CGame"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Title="CGame">
    <Canvas x:Name="LayoutRoot" Width="960" Height="600" Margin="2" >
        <Canvas x:Name="_floor_canvas" Width="960" Height="600" Canvas.Left="0" Canvas.Top="0" Canvas.ZIndex="1" CacheMode="BitmapCache" />
        <Canvas x:Name="_food_canvas" Width="960" Height="600" Canvas.Left="0" Canvas.Top="0" Canvas.ZIndex="2" CacheMode="BitmapCache" />
        <Canvas x:Name="_snake_canvas" Width="960" Height="600" Canvas.Left="0" Canvas.Top="0" Canvas.ZIndex="3" />
    </Canvas>
</controls:ChildWindow>